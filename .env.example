# Supabase
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# AI Engine
GEMINI_API_KEY=your_gemini_api_key

# Application
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000
PIXEL_URL=http://localhost:3002

# Session & Security
SESSION_SECRET=your_session_secret
JWT_SECRET=your_jwt_secret
COOKIE_DOMAIN=localhost

# Token Encryption (for storing OAuth tokens securely in database)
TOKEN_ENCRYPTION_KEY=generate_a_random_32_byte_string_here

# Development Auth (bypass login for local development)
DEFAULT_USER_ID=your_default_user_uuid

# OAuth App Registration (for the platform itself, not user credentials)
# Register your app with each platform to get these credentials
# Users will connect their accounts through OAuth flows in the UI

# Google (GA4) - https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH_CLIENT_ID=your_google_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret

# Meta (Facebook/Instagram) - https://developers.facebook.com/apps
META_OAUTH_APP_ID=your_meta_app_id
META_OAUTH_APP_SECRET=your_meta_app_secret

# Stripe - https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_OAUTH_CLIENT_ID=your_stripe_connect_client_id

# PayPal - https://developer.paypal.com/dashboard/applications
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# HubSpot - https://developers.hubspot.com/
HUBSPOT_OAUTH_CLIENT_ID=your_hubspot_client_id
HUBSPOT_OAUTH_CLIENT_SECRET=your_hubspot_client_secret

# Mailchimp - https://admin.mailchimp.com/account/oauth2/
MAILCHIMP_OAUTH_CLIENT_ID=your_mailchimp_client_id
MAILCHIMP_OAUTH_CLIENT_SECRET=your_mailchimp_client_secret

# OAuth Redirect URIs
OAUTH_REDIRECT_URI=http://localhost:3001/api/oauth/callback

